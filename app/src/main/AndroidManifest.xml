<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.bloodme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".thankyou"></activity>
        <activity android:name=".forgotpassword"></activity>
        <activity android:name=".afterlogin"></activity>
        <activity android:name=".blood_requester"></activity>
        <activity android:name=".blooddonate"></activity>
        <activity android:name=".requested"></activity>
        <activity android:name=".Login.LoginFragment"></activity>
        <activity android:name=".Login.SignupFragment"></activity>
    </application>

</manifest>